<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/search_adapter_linear">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="15dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"

    android:orientation="vertical">
    <TextView
        android:id="@+id/search_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:text="歌名"/>
    <TextView
    android:id="@+id/search_adapter_mesic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
        android:layout_margin="5dp"
        android:textColor="#acabbc"
    android:text="歌手名"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#acafac"/>
</LinearLayout>
    <ImageView
        android:id="@+id/search_adapter_diandian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/diandian"/>

</LinearLayout>