<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424">
<LinearLayout
    android:background="#1F1310"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/music_fanhui"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/xiangixa"
        />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/music_geming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="歌名"/>
        <TextView
            android:id="@+id/music_geshouname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text="歌手"/>
    </LinearLayout>

</LinearLayout>

    <FrameLayout
        android:id="@+id/music_framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/music_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:id="@+id/music_radbutton1"
            android:checked="true"
            android:tag="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:tag="1"
            android:id="@+id/music_radbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/music_dangqianshijian"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="00:00"
         android:textColor="#FFFFFF"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         />

     <SeekBar
         android:id="@+id/music_seekbar"
         android:paddingRight="10dip"
         android:layout_gravity="center_vertical"
         android:paddingLeft="10dip"
         android:layout_weight="1.0"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"

         android:max="100"/>
     <TextView
          android:id="@+id/music_zongshijian"
          android:layout_marginRight="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="00:00"
          android:textColor="#FFFFFF"/>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/music_shang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/shangyishou"
            android:layout_gravity="center"/>
        <CheckBox
            android:id="@+id/music_kaishi"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
              android:checked="false"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/kaishianniu"/>
        <ImageView
            android:id="@+id/music_xia"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/xiayishou"/>
    </LinearLayout>
</LinearLayout>